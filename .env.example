LOG_LEVEL=info
ENVIRONMENT=development
APP_HOST=0.0.0.0
APP_PORT=8000

# Qdrant Cloud settings
QDRANT_URL=https://your-qdrant-url
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_API_KEY_HEADER=api-key
COLLECTION_NAME=Sentio_docs
# TEXT_VECTOR_NAME=text-dense

EMBEDDING_MODEL=jina-embeddings-v3
EMBEDDING_MODEL_API_KEY=your-jina-embedding-api-key
# NOT USED:
# EMBEDDING_BATCH_SIZE=64
# EMBEDDING_PROVIDER=jina

# Reranker Configuration
RERANKER_MODEL=jina-reranker-m0
RERANKER_URL=https://api.jina.ai/v1/rerank
RERANKER_TIMEOUT=30

# Chat LLM Configuration
CHAT_LLM_BASE_URL=https://openrouter.ai/api/v1
CHAT_LLM_MODEL=deepseek/deepseek-r1-0528:free
CHAT_LLM_API_KEY=your-chat-llm-api-key

# LangGraph/LangSmith Configuration
LANGCHAIN_TRACING=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=sense-rag

# LangGraph Server Configuration
LANGGRAPH_SERVER_PORT=2024
LANGGRAPH_SERVER_HOST=127.0.0.1

# Sentio RAG Configuration
USE_LANGGRAPH=true
ENABLE_AUTOMATIC_EVALUATION=true

# Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=64
MIN_CHUNK_SIZE=50
MAX_CHUNK_SIZE=1024
PRESERVE_CODE_BLOCKS=true
PRESERVE_TABLES=true
CHUNKING_STRATEGY=recursive # sentence | recursive

SAMPLE_DOCS_FOLDER=data/raw

# Retrieval Strategy Configuration
RETRIEVAL_STRATEGY=dense # dense | bm25 | pyserini | hybrid
RETRIEVAL_TOP_K=20
RERANKING_TOP_K=5
SELECTION_TOP_K=3
USE_RERANKER=true
RRF_K=20 # Reciprocal Rank Fusion constant
BM25_VARIANT=okapi # okapi | plus
BM25_INDEX_DIR=indexes/lucene-index
SPARSE_CACHE_DIR=.sparse_cache
SENTIO_BACKEND_URL=http://localhost:8000 #  | http://sentio-api:8000